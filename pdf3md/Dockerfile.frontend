FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build the application
RUN npm run build

# Install a simple HTTP server to serve the built files
RUN npm install -g serve

ARG FRONTEND_PORT
ENV PORT=${FRONTEND_PORT:-3000}

# Expose port
EXPOSE ${PORT}

# Serve the built application
CMD ["serve", "-s", "dist"]
